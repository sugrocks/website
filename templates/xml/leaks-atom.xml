{% extends "layout-atom.xml" %}
{% from "helper.xml" import atom_item %}
{% block feed_title %}LEAKBOT Feed{% endblock %}
{% block feed_description %}Leaks found on CN's server. New checks every hour.{% endblock %}
{% block feed_update %}{{ lastupdate }}{% endblock %}
{% block feed_id %}https://sug.rocks/leaks.xml{% endblock %}
{% block feed_self %}https://sug.rocks/leaks.xml{% endblock %}
{% block feed_link %}https://sug.rocks/leaks.html{% endblock %}
{% block feed_items %}
{% for leak in leaks %}
{% set published %}{{ leak.atomdate }}{% endset %}
{% set updated %}{{ leak.atomdate }}{% endset %}
{% set title %}{{ leak.title }} (ID: {{ leak.contentid }}){% endset %}
{% set content %}{% if leak.desc %}
            <blockquote>
                <p>{{ leak.desc }}</p>
            </blockquote>
{% endif %}
{% if leak.screenshots %}
            <b>Screenshots (might be spoiler as shit):</b>
            <ul>
{% for screen in leak.screenshots %}
                <li><a target="_blank" href="https://sug.rocks/leaks/{{ screen }}">https://sug.rocks/leaks/{{ screen }}</a></li>
{% endfor %}
            </ul>{% endif %}
{% if leak.previews %}
            <b>2 minutes video preview</b>
            <ul>
{% for video in leak.previews %}
                <li><a target="_blank" href="https://sug.rocks/leaks/{{ video }}">https://sug.rocks/leaks/{{ video }}</a></li>
{% endfor %}
            </ul>{% endif %}{% endset %}
{% set guid %}https://sug.rocks/leaks.html#{{ leak.contentid }}{% endset %}
{{ atom_item(title, content, guid, published, updated) }}
{% endfor %}
{% endblock %}
