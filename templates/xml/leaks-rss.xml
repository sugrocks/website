{% extends "layout-rss.xml" %}
{% from "helper.xml" import rss_item %}
{% block feed_self %}https://sug.rocks/leaks.rss{% endblock %}
{% block feed_title %}LEAKBOT Feed{% endblock %}
{% block feed_description %}Leaks found on CN's server. New checks every hour.{% endblock %}
{% block feed_link %}https://sug.rocks/leaks.html{% endblock %}
{% block feed_title_image %}LEAKBOT Feed{% endblock %}
{% block feed_link_image %}https://sug.rocks/leaks.html{% endblock %}
{% block feed_items %}
{% for leak in leaks %}
{% set title %}{{ leak.title }} (ID: {{ leak.contentid }}){% endset %}
{% set content %}{% if leak.desc %}
                <blockquote>
                    <p>{{ leak.desc }}</p>
                </blockquote>
{% endif %}
{% if leak.screenshots %}
                <b>Screenshots (might be spoiler as shit):</b>
                <ul>
{% for screen in leak.screenshots %}
                    <li><a target="_blank" href="https://sug.rocks{{ screen }}">https://sug.rocks{{ screen }}</a></li>
{% endfor %}
                </ul>{% endif %}
{% if leak.previews %}
                <b>2 minutes video preview</b>
                <ul>
{% for video in leak.previews %}
                    <li><a target="_blank" href="https://sug.rocks{{ video }}">https://sug.rocks{{ video }}</a></li>
{% endfor %}
                </ul>{% endif %}{% endset %}
{% set published %}{{ leak.rssdate }}{% endset %}
{% set guid %}https://sug.rocks/leaks.html#{{ leak.contentid }}{% endset %}
{{ rss_item(title, content, guid, published) }}
{% endfor %}
{% endblock %}
