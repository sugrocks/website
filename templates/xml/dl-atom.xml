{% extends "layout-atom.xml" %}
{% from "helper.xml" import atom_item %}
{% block feed_title %}/sug/ Downloads{% endblock %}
{% block feed_description %}Direct downloads or torrents for Steven Universe episodes{% endblock %}
{% block feed_update %}{{ lastupdate }}{% endblock %}
{% block feed_id %}https://sug.rocks/dl.xml{% endblock %}
{% block feed_self %}https://sug.rocks/dl.xml{% endblock %}
{% block feed_link %}https://sug.rocks/dl.html{% endblock %}
{% block feed_items %}
{% for episode in episodes %}
{% set published %}{{ episode.date|atomdate }}{% endset %}
{% set updated %}{{ episode.date|atomdate }}{% endset %}
{% set title %}[{% if episode.id[-3:] == 'tmp' %}PREAIR{% elif episode.id[-1:] == 'm' %}Individual{% else %}iTunes RAW{% endif %}] {{ episode.title }} ({{ episode.code }}){% endset %}
{% set content %}
                <ul>
{% if episode.id[-3:] == 'tmp' %}
                    <li><a title="Direct Download" href="https://dl.sug.rocks/preair/{{ episode.filename }}">Direct Download</a></li>
{% elif episode.id[-1:] == 'm' %}
                    <li><a title="Direct Download" href="https://dl.sug.rocks/mega/{{ episode.filename }}">Direct Download</a></li>
{% else %}
                    <li><a title="Direct Download" href="https://dl.sug.rocks/{{ episode.filename }}">Direct Download</a></li>
{% endif %}
{% if episode.torrent == '1' %}
                    <li><a title="Torrent" href="https://dl.sug.rocks/torrents/{% if episode.id[-3:] == 'tmp' %}preair/{% endif %}{{ episode.filename }}.torrent">Torrent</a></li>
{% endif %}
{% if episode.ctoon != '' %}
                    <li><a title="Streaming" href="https://ctoon.party/sun/{{ episode.ctoon }}">CTOON</a></li>
{% endif %}
{% if episode.daily and episode.daily != '' %}
                    <li><a title="Dailymotion" href="http://www.dailymotion.com/video/{{ episode.daily }}">Dailymotion</a></li>
{% endif %}
                </ul>{% endset %}
{% set guid %}https://sug.rocks/dl.html#{{ episode.id }}{% endset %}
{{ atom_item(title, content, guid, published, updated) }}
{% endfor %}
{% endblock %}
